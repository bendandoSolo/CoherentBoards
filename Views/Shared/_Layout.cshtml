<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Coherent Boards</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />*@
    <link href="~/Content/CoherentBootStrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables-1.10.2/css/jquery.dataTables.min.css" rel="stylesheet" />
    @*<script src="~/Scripts/modernizr-2.6.2.js"></script>*@
</head>
<body>
    <div class="navbar navbar-custom navbar-fixed-top">
        <div class="navbar-header">
            <a class="navbar-brand" href="#" style="width: 250px">
                <div id="defaultLogoDiv" style="position: absolute; top: 5px;">
                    <div style="text-align: center; font-family: Arial; font-size: 16px; font-weight: bold;
    color: #0E135F; width: 200px">
                        COHERENT
                    </div>
                    <div style="text-align: center; font-family: Arial; font-size: 16px; font-weight: bold;
    color: white; background: #000080; width: 200px">
                        RESEARCH
                    </div>
                </div>
            </a>
        </div>
        <div class="Title">
            <h3 class="pagination-centered bgColor text-center" style="position:relative;left:-150px;">
                @*class="nav navbar-nav pagination-centered">*@
                Boards Repository
            </h3>
        </div>


        @if (User.Identity.IsAuthenticated)
        {
            @Html.Partial("_LoginPartial")
        }

    </div>




    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Coherent Research</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Content/CoherentBootStrap/js/bootstrap.min.js"></script>
    <script src="~/Scripts/DataTables-1.10.2/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function () {
        window.$datatables = $('.asDataTable').dataTable({
            paging: false,
            "bStateSave": true,
            "bSortClasses": false,
            "order": [1, 'asc']

        });
    });
    </script>
    @*<script src="~/Scripts/bootstrap.min.js"></script>*@
</body>
</html>